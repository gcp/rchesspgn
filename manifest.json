{
    "content_scripts": [
        {
            "css": [
                "css/pgnvjs.css",
                "css/third.css"
            ],
            "js": [
                "pgnvjssettings.js",
                "js/pgnvjs.js",
                "rchesspgn.js"
            ],
            "matches": [
                "*://*.reddit.com/*"
            ]
        }
    ],
    "web_accessible_resources": [
        "css/*",
        "fonts/*",
        "img/*",
        "locales/*"
    ],
    "description": "Puts a board in all Reddit pages with PGNs marked by [pgn][/pgn]",
    "icons": {
        "128": "knight.png"
    },
    "manifest_version": 2,
    "name": "Reddit PGN viewer",
    "permissions": [
        "*://*.reddit.com/*"
    ],
    "version": "2.0.0"
}